ifeq ($(OPENJDK_TARGET_OS), macosx)
  ifeq ($(JIGSAW), true)
    BUILD_LIBJLI_SRC_DIRS += $(JDK_TOPDIR)/$(SRC_SUBDIR)/java.base/macosx/native/libjli
